generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  role      Role     @default(CUSTOMER)
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  CUSTOMER
  ADMIN
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  imageUrl    String?
  category    String
  brand       String?
  stockOut    Boolean  @default(false)
  storeOrder  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orderItems  OrderItem[]
}

model Order {
  id                   String        @id @default(cuid())
  userId               String?
  user                 User?         @relation(fields: [userId], references: [id])
  guestEmail           String?
  deliveryAddress      String
  deliveryTimePref     String?       // optional
  paymentMethod        PaymentMethod @default(CASH_ON_DELIVERY)
  status               OrderStatus   @default(PENDING)
  totalAmount          Float
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt

  orderItems           OrderItem[]
}

enum PaymentMethod {
  CASH_ON_DELIVERY
  CREDIT_CARD_ON_DELIVERY
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int
  priceAtBuy Float

  @@unique([orderId, productId])
}
